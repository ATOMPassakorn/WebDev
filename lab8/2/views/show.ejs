<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show data</title>
    <style>
        body{
            font-family: Arial, Helvetica, sans-serif;
            margin: 20px;
            font-size: 24px;
        }
        table{
            width: 100%;
        }
        table,th,td{
            border-bottom: 1px solid black;
            border-collapse: collapse;
            padding: 10px;
        }
        th,td{
            text-align: left;
        }
    </style>
</head>

<body>
    <!-- สร้างตารางสำหรับแสดงข้อมูล -->
    <!-- EJS Syntax -->
    <table>
        <tr>
            <th>username</th>
            <th>password</th>
            <th>email</th>
            <th>firstname</th>
            <th>lastname</th>
            <th>age</th>
            <th>address</th>
            <th>phone</th>
        </tr>
        <% data.forEach((item)=>{ %>

        <tr>
            <td><%= item.username %></td>
            <td><%= item.password %></td>
            <td><%= item.email %></td>
            <td><%= item.firstname %></td>
            <td><%= item.lastname %></td>
            <td><%= item.age %></td>
            <td><%= item.address %></td>
            <td><%= item.phone %></td>
        </tr>
    
        <% }); %>
    </table>
    <p>Click <a href="/">here </a>to go back.</p>
</body>

</html>